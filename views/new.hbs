<div id="new-run">
  <h1>ADD A NEW RUN</h1>
  <form action="/{{username}}/new-run" method="POST">
    <input type="text" name="runName" placeholder="NAME YOUR RUN"><br>
    <input type="date" name="date" placeholder="DATE"><br>
    <input type="text" name="distance" placeholder="DISTANCE"><br>
    <input type="text" name="time" placeholder="TIME HR:MIN:SEC"><br>
    <select name="rpe">
      <option>20</option>
      <option>19</option>
      <option>18</option>
      <option>17</option>
      <option>16</option>
      <option>15</option>
      <option>14</option>
      <option>13</option>
      <option>12</option>
      <option>11</option>
      <option>10</option>
      <option>9</option>
      <option>8</option>
      <option>7</option>
      <option>0-6</option>
    </select>
    <textarea name="description" rows="8" cols="50">
      HOW DID YOUR RUN GO?
    </textarea>
    <input type="submit" name="new" value="NEW RUN">
  </form>
</div>
